@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Role Details";
}
<h1>@ViewBag.Title </h1>
<div>
    <hr />
    <div class="dl-horizontal">
        <h2> Role: <span>@Html.DisplayFor(model => model.Name)</span></h2>
    </div>
</div>
<h3>List of users in this role</h3>
@if (ViewBag.UserCount == 0) {
    <hr />
    <p>No users found in this role.</p>
}
<table class="table">
    @foreach (var item in ViewBag.Users) {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "AdminPanel")
</p>