@model IEnumerable<StudentAccom.Models.Accommodation>

@{
    ViewBag.Title = "Accommodation Advertisements";
}

<html>
    <head>
        <link rel="stylesheet" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" href="~/Content/Site.css" />
    </head>
    <body>
        <h2>@ViewBag.Title</h2>
        <section class="col-md-12" id="MainSection" title="Accommodation advertisements">
            @foreach(var accom in Model) {
                <div class="ad col-md-6">
                    <img class="img-thumbnail" width="304" height="236" src="data:accom.Images.ElementAt(0).MimeType;base64, @Convert.ToBase64String(accom.Images.ElementAt(0).ImageData)" />
                    <p><strong>@accom.Title</strong></p>
                    <p>@accom.Description</p>                    
                </div>
            }
        </section>
    </body>
</html>


